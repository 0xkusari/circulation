<div class="main">
  <h2>
    Profile
  </h2>
  <%= form_tag(settings_profile_path, method: :put) do |form| %>
    <div class="field">
      <label class="label">Name</label>
      <div class="control">
        <%= text_field_tag(:name, @user.name, class: "input") %>
      </div>
    </div>
    <div class="field">
      <div class="control">
        <%= submit_tag("Save", class: "button is-info") %>
      </div>
    </div>
  <% end%>
 </div>
