<div class="box">
  <article class="media">
    <% if item.image_url %>
      <div class="media-left">
        <figure class="image is-128x128">
          <%= image_tag(item.image_url) %>
        </figure>
      </div>
    <% end %>
    <div class="media-content">
      <div class="content">
        <h3>
          <%= link_to(item.title.presence || item.url, item.url, target: "_blank") %>
        </h3>
        <p>
          <%= item.description %>
        </p>
      </div>
    </div>
  </article>
</div>
